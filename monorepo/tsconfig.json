{
	"compilerOptions": {
		"target": "ESNext",
		"rootDir": ".",
		"module": "ESNext",
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules"
	]
}
