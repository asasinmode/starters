{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".", 
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": ["src/*"]
    },
  
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,

    /* Completeness */
    "skipDefaultLibCheck": true,   
    "skipLibCheck": true,
  },
  "exclude": ["dist", "node_modules"]
}
